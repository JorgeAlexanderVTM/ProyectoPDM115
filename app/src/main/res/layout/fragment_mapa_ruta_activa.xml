<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".repartidor.MapaRutaActiva">

    <!-- Toolbar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/__toolbar_repartidor" />
    </androidx.cardview.widget.CardView>

    <!-- Entregas asignadas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_mapa"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="40dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:padding="18dp"
            android:background="@color/white">

            <ImageView
                android:src="@drawable/__removebg_preview4"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:text="Mapa y ruta activa"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ScrollView para el contenido variable -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/card_mapa"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="0dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left|center"
            android:background="@color/white"
            android:padding="40dp">

            <!-- Campos de entrada -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:text="Punto de Partida:"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textColorHint="@color/textHint"
                android:padding="12dp"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/borde_edittext"
                android:text="Destino:"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>