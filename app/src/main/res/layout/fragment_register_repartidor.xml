<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".repartidor.RegisterRepartidor">

    <!-- Título fijo: 10% -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:gravity="center"
        android:text="Regístrate como repartidor"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- ScrollView para el contenido variable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <!-- Imagen de perfil -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:contentDescription="Imagen de perfil"
                    android:scaleType="centerCrop"
                    android:src="@drawable/__default" />

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="6dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/circle_white_background"
                    android:padding="6dp"
                    android:contentDescription="Editar imagen" />
            </FrameLayout>

            <!-- Campos de entrada -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="Nombre"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="Número de celular"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="DUI"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="Licencia de conducir"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/borde_edittext"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/borde_edittext"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/textHint"
                android:padding="12dp" />

            <!-- Botones -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                app:backgroundTint="@null"
                android:background="@drawable/fondo_boton"
                android:backgroundTint="#4296B3"
                android:text="Registrarse"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:backgroundTint="@null"
                android:background="@drawable/fondo_boton"
                android:backgroundTint="#4296B3"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/containerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone"
        >
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/mapContainer"
            app:layout_constraintBottom_toBottomOf="@id/mapContainer"
            app:layout_constraintStart_toStartOf="@id/mapContainer"
            app:layout_constraintEnd_toEndOf="@id/mapContainer" />
    </LinearLayout>
</LinearLayout>
