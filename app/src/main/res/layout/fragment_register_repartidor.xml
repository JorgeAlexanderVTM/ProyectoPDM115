<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".repartidor.RegisterRepartidor">

    <!-- Contenido principal del formulario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:weightSum="1">

        <!-- Título fijo: 10% -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:gravity="center"
            android:text="Regístrate como repartidor"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- ScrollView para el contenido variable -->
        <ScrollView
            android:id="@+id/containerFormulario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.90"
            android:fillViewport="true"> <!-- Aplicado aquí para el ajuste del teclado -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="200dp"> <!-- Padding generoso para el desplazamiento -->

                <!-- Imagen de perfil -->
                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/profile_image_repartidor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"
                        android:contentDescription="Imagen de perfil"
                        android:scaleType="centerCrop"
                        android:src="@drawable/__default" />

                    <ImageView
                        android:id="@+id/edit_icon_repartidor"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="6dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:background="@drawable/circle_white_background"
                        android:padding="6dp"
                        android:contentDescription="Editar imagen" />
                </FrameLayout>

                <!-- Campos de entrada con IDs -->
                <EditText
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Nombre de usuario"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtPrimerNombre"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Primer nombre"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtPrimerApellido"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Primer apellido"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtNumeroTel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Número de celular"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtDUI"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="DUI"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtLicenciaConducir"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Licencia de conducir"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Correo electrónico"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <EditText
                    android:id="@+id/txtRepetirContrasena"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/borde_edittext"
                    android:hint="Confirmar contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textHint"
                    android:padding="12dp" />

                <!-- Botones -->
                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="16dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/fondo_boton"
                    android:backgroundTint="#4296B3"
                    android:text="Registrarse"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/fondo_boton"
                    android:backgroundTint="#4296B3"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Contenedor de ProgressBar (se superpone a todo cuando es visible) -->
    <LinearLayout
        android:id="@+id/containerProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:text="Cargando por favor espere..."
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:indeterminate="true" />
    </LinearLayout>

    <!-- Contenedor de Mensajes (se superpone a todo cuando es visible) -->
    <LinearLayout
        android:id="@+id/containerMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
